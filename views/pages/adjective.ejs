<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>German Dictionary</h1>
    <p>Welcome to templating using EJS</p>
  </div>
  <div class="container">
    <h2>Adjektive nach dem unbestimmten Artikel</h2>
    <div class="row">
      <div class="col">
        -
      </div>
      <div class="col">
        <strong>Maskulin</strong>
      </div>
      <div class="col">
        <strong>Neutrum</strong>
      </div>
      <div class="col">
        <strong>Feminin</strong>
      </div>
      <div class="col">
        <strong>Plural</strong>
      </div>
    </div>

    <% words.forEach(function(word) { %>
      <div class="row">
        <div class="col">
          <strong><%= word.title %></strong>
        </div>
        <div class="col">
          <input id="<%= word.maskulin %>" oninput="checkAnswer(id)">
          <%= word.maskulin %>
          
        </div>
        <div class="col">
          <input>
          <%= word.neutrum %>
        </div>
        <div class="col">
          <input>
          <%= word.feminin %>
        </div>
        <div class="col">
          <input>
          <%= word.plural %>
        </div>
      </div>
    <% }); %>
    
  </div>

  <h2>Adjektive nach dem bestimmten Artikel</h2>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
<script>
  function checkAnswer(id) {
    var x = document.getElementById(id).value;
    if (x == id) {
      console.log("Correct");
    } else {
      console.log("Fault");
    }
  }
</script>