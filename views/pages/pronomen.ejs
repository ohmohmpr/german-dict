<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>Pronomen</h1>
    <a href="#1"> <h3>1. Personalpronomen</h3> </a>
    <a href="#2"> <h3>2. Personalpronomen: Jeder</h3> </a>
  </div>

  <hr>

  <table id="1" class="table caption-top table-bordered border-dark">
    <caption>
      <h2>1. Personalpronomen</h2>
    </caption>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">ich</th>
        <th scope="col">du</th>
        <th scope="col">er</th>
        <th scope="col">es</th>
        <th scope="col">sie</th>
        <th scope="col">wir</th>
        <th scope="col">ihr</th>
        <th scope="col">sie</th>
        <th scope="col">Sie</th>
      </tr>
    </thead>
    <tbody>
      <% words.possessivartikel.forEach(function(word) { %>
        <tr>
          <th scope="row"><%= word.title %></th>
          <td>
            <input id="<%=word.title %>-<%= word.ich %>" oninput="checkAnswer(id)" size="4"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.du %>" oninput="checkAnswer(id)" size="4"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.er %>" oninput="checkAnswer(id)" size="4"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.es %>" oninput="checkAnswer(id)" size="4"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.sie %>" oninput="checkAnswer(id)" size="4"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.wir %>" oninput="checkAnswer(id)" size="4"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.ihr %>" oninput="checkAnswer(id)" size="4"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.sie2 %>" oninput="checkAnswer(id)" size="4"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.Sie %>" oninput="checkAnswer(id)" size="4"> 
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <hr>

  <table id="2" class="table caption-top table-bordered border-dark">
    <caption>
      <h2>2. Personalpronomen: Jeder</h2>
      <p> Jede + Singular. = Each</p>
    </caption>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Maskulin</th>
        <th scope="col">Neutrum</th>
        <th scope="col">Feminin</th>
        <th scope="col">Plural</th>
      </tr>
    </thead>
    <tbody>
      <% words.jeder.forEach(function(word) { %>
        <tr>
          <th scope="row"><%= word.title %></th>
          <td>
            <input id="<%=word.title %>-<%= word.maskulin %>" oninput="checkAnswer(id)"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.neutrum %>" oninput="checkAnswer(id)"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.feminin %>" oninput="checkAnswer(id)"> 
          </td>
          <td>
            <input id="<%=word.title %>-<%= word.plural %>" oninput="checkAnswer(id)"> 
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
<script>
  function checkAnswer(id) {
    let new_id = id.substring(id.indexOf('-') + 1);
    let elm = document.getElementById(id);

    if (elm.value == new_id) {
      elm.style.color = "green";
    } else {
      elm.style.color = "black";
    }
    
  }
</script>