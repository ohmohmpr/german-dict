<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>German Dictionary</h1>
  </div>

  <table class="table caption-top table-bordered border-dark">
    <caption>
      <h2>Indirekte Fragesätze: W-Fragen</h2>
      
    </caption>
    <thead>
      <tr>
        <th scope="col">Direkte Frage</th>
        <th scope="col">Indirekte Frage</th>
      </tr>
    </thead>
    <tbody>
      <% words.words.forEach(function(word) { %>
        <tr>
          <th scope="row">
            <%= word.direct_question %>
            <br>
            <%= word.direct_question_eng %>
          </th>
          <td>
            <%= word.indirect_question1 %>
            <input id="<%=word.indirect_question2 %>" oninput="checkAnswer(id)" size="50"> 
            <br>
            <%= word.indirect_question_eng %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <hr>
  <table class="table caption-top table-bordered border-dark">
    <caption>
      <h2>Indirekte Fragesätze: Ja-/Nein-Fragen mit ob</h2>
      
    </caption>
    <thead>
      <tr>
        <th scope="col">Direkte Frage</th>
        <th scope="col">Indirekte Frage</th>
      </tr>
    </thead>
    <tbody>
      <% words.words2.forEach(function(word) { %>
        <tr>
          <th scope="row">
            <%= word.direct_question %>
            <br>
            <%= word.direct_question_eng %>
          </th>
          <td>
            <%= word.indirect_question1 %>
            <input id="<%=word.indirect_question2 %>" oninput="checkAnswer(id)" size="50"> 
            <br>
            <%= word.indirect_question_eng %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
<script>
  function checkAnswer(id, test) {
    let new_id = id.substring(id.indexOf('-') + 1);
    let elm = document.getElementById(id);

    if (elm.value == new_id) {
      elm.style.color = "green";
    } else {
      elm.style.color = "black";
    }
    
  }
</script>