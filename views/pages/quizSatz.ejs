<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <table id="1" class="table caption-top table-bordered border-dark">
    <caption>
      <h2>1. Placeholder</h2>
    </caption>
    <!-- <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Answer</th>
      </tr>
    </thead> -->
    <tbody>
        <tr>
          <th scope="row"><%= quizSatz[0].bedeutung %> (Point: <%= quizSatz[0].correct_point %>)</th>
        </tr>
        <tr>
          <td>
            <input id="<%= quizSatz[0].id %>" 
            oninput="checkAnswer(id)" size="40" autocomplete="off"> 
            <!-- <button>send</button> -->
          </td>
        </tr>
        <tr>  
          <td>
            <p id="answer" style="display: none;">
              <%= quizSatz[0].satz %>
            </p>
          </td>
        </tr>
    </tbody>
  </table>

</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
<script>
  // https://stackoverflow.com/questions/11289793/accessing-ejs-variable-in-javascript-logic
  var parsed_data =  <%- JSON.stringify(quizSatz) %>;
  row_id = parsed_data[0].id;
  satz = parsed_data[0].satz;

  function send(bool) {

    if (bool){
      fetch("/postAddPoint", {method:'post', body: new URLSearchParams({
                  'id':row_id,
      })});
    }
    else {
      fetch("/postMinusPoint", {method:'post', body: new URLSearchParams({
                  'id':row_id,    
      })});
    }
  }

  function checkAnswer(id) {

    // https://stackoverflow.com/questions/46640024/how-do-i-post-form-data-with-fetch-api
    let elm = document.getElementById(id);

    if (elm.value == satz) {
      elm.style.color = "green";
      elm.value = satz
      elm.disabled = true;
      send(true)
      setTimeout(function(){
        location.reload();
      }, 2000); // milliseconds
    } else {
      elm.style.color = "black";
      let answer = document.getElementById("answer");
      if (elm.value.includes(".")) {
        send(false)
        elm.disabled = true;
        answer.style.display = "block"
        console.log(false, row_id)
      } else {
        answer.style.display = "none"
      }
    }

  }
</script>